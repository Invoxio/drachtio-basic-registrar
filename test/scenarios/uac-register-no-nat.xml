<scenario name="Basic Sipstone UAC">
  <!-- In client mode (sipp placing calls), the Call-ID MUST be         -->
  <!-- generated by sipp. To do so, use [call_id] keyword.                -->
  <send retrans="500">
    <![CDATA[

      REGISTER sip:1234@drachtio.org SIP/2.0
      Via: SIP/2.0/[transport] [local_ip]:[local_port];branch=[branch]
      From: sipp <sip:1234@drachtio.org>;tag=[pid]SIPpTag00[call_number]
      To: [service] <sip:1234@drachtio.org>
      Call-ID: [call_id]
      CSeq: 1 REGISTER
      Contact: <sip:1234@[local_ip]:[local_port]>;expires=3600
      Max-Forwards: 70
      Subject: Performance Test
      Content-Length: 0

    ]]>
  </send>

  <recv response="401" auth="true"/>

  <send retrans="500">
    <![CDATA[

      REGISTER sip:1234@drachtio.org SIP/2.0
      Via: SIP/2.0/[transport] [local_ip]:[local_port];branch=[branch]
      From: sipp <sip:1234@drachtio.org>;tag=[pid]SIPpTag00[call_number]
      To: [service] <sip:1234@drachtio.org>
      Call-ID: [call_id]
      CSeq: 2 REGISTER
      Contact: <sip:1234@[local_ip]:[local_port]>;expires=3600
      [authentication username=1234 password=foo]
      Max-Forwards: 70
      Subject: Performance Test
      Content-Length: 0

    ]]>
  </send>

  <recv response="200" rtd="true">
    <action>
      <ereg regexp="3600" search_in="hdr" header="Expires:" check_it="true" assign_to="1"/>
      <log message="[$1]"/>
    </action>
  </recv>


</scenario>

